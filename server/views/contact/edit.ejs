<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/style'); %>
</head>
<body>
 <header>
    <%- include('../partials/header'); %>
 </header>
 <div class="container">
   <div class="row">
   <div class="offset-md-2 col-md-6">
<h1><%= title %></h1>

<form class="form" method="POST">
 <div class="form-group">
   <label for="nameTextField">Contact Name</label>
   <input type="text" class="form-control"
   id="nameTextField"
   placeholder="Enter the contact name"
   name="name" 
   value="<%= contact.name %>" 
   required>
 </div>  

 <form class="form" method="POST">
 <div class="form-group">
   <label for="numberTextField">Contact Number</label>
   <input type="number" class="form-control"
   id="numberTextField"
   placeholder="Enter the contact number"
   name="number" 
   value="<%= contact.number %>"
   required>
 </div>  

 <form class="form" method="POST">
   <div class="form-group">
     <label for="emailTextField">Email ID</label>
     <input type="text" class="form-control"
     id="emailTextField"
     placeholder="Enter the email id"
     name="email" 
     value="<%= contact.email %>"
     required>
   </div>   
   <button class="btn btn-primary" type="submit">
      <i class="fas fa-edit"></i>Submit</button>

      <a href="/contact-list" class="btn btn-warning">
         <i class="fas fa-undo"></i>Cancel</a>    
</form>
</div>
</div>

 <footer>
    <%- include('../partials/footer'); %>
   </footer>
 </body>
</html>